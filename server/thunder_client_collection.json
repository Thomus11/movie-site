  "item": [
    {
      "name": "User",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["login"]
            }
          }
        }
      ]
    },
    {
      "name": "Movies",
      "item": [
        {
          "name": "Create Movie (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Test Movie\",\n  \"description\": \"A test movie description.\",\n  \"poster_url\": \"http://example.com/poster.jpg\",\n  \"genre\": \"Drama\",\n  \"release_date\": \"2023-01-01\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/movies",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["movies"]
            }
          }
        },
        {
          "name": "Get Movies (Paginated)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/movies?page=1&per_page=10",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["movies"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
