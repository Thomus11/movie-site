              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"movie_id\": 1,\n  \"start_time\": \"2023-12-01 19:00:00\",\n  \"duration\": 120\n}"
            },
            "url": {
              "raw": "http://localhost:5000/showtimes",
              "protocol": "http",
              "host": ["localhost"],
